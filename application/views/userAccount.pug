extends layouts/main-layout

block content
    table(style='width: 1400px; height: 1000px; margin: auto') 
        tr
            td(style='height: 10%; vertical-align: 0') 
                h2 Your Account
        tr
            td(style='width: 80%; height: 25%; vertical-align: 0') 
                h4(style='text-decoration: underline; margin-bottom: 10px') Order History
                table(style='width: 90%; height: 80%; margin-top: 5px')
                    tr(style='vertical-align: bottom')
                        td ORDER 
                        td DATE 
                        td PAYMENT STATUS 
                        td FULFILLMENT STATUS   
                        td TOTAL 
                    tr(style='height: 5px')
                        td(colspan='5')
                            hr
                    tr(style='vertical-align: top')
                        td #
                        td 00/00/0000
                        td Paid
                        td Fulfilled
                        td $
            td(style='width: 20%; height: 25%; vertical-align: 0')
                h4(style='text-decoration: underline; margin-bottom: 10px') Account Details
                p User Name 
                br
                p Gator ID #
                br
                p Email
                br
                a(href='' style='float: right; text-decoration: overline') Edit
        tr 
            td(colspan='2' style='width: 100%; height: 20%; vertical-align: 0') 
                h4(style='text-decoration: underline; margin-bottom: 10px') Favorite Restaurants 
                table(style='width: 90%; height: 80%; margin-top: 5px')
                    tr 
                        td(style='width: 33%')
                            .popular-restaurants
                                img
                                p Favorite #1
                        td(style='width: 33%')
                            .popular-restaurants
                                img
                                p Favorite #2
                        td(style='width: 33%')
                            .popular-restaurants
                                img
                                p Favorite #3
        tr(style='height: 5px')
                        td
                            hr
        tr 
            td(colspan='2' style='width: 100%; height: 20%; vertical-align: 0') 
                h4(style='text-decoration: underline; margin-bottom: 10px') Recommendations
                table(style='width: 90%; height: 80%; margin-top: 5px')
                    tr 
                        td(style='width: 33%')
                            .popular-restaurants
                                img
                                p Recommendation #1
                        td(style='width: 33%')
                            .popular-restaurants
                                img
                                p Recommendation #2
                        td(style='width: 33%')
                            .popular-restaurants
                                img
                                p Recommendation #3