extends layouts/main-layout

block content
    head 
        title GatorBites Checkout
        script(type='module' src="/js/cart.js")
    div.checkoutContainer(id='checkout-container')
        h1 Checkout
        br
        br
        br
        div#restaurant-header
            div#restaurant-info
                h3 Roma Antica
            img(src="https://via.placeholder.com/150")
        br

        div#checkout-cards

            div#checkout-card
                div#delivery-details-card
                    h3 Delivery Details
                    br
                    p Delivery Address: 
                    input(type='text' id='delivery-address' placeholder='SFSU' readonly)
                    p Delivery Instructions: 
                    select(id='delivery-type')
                        option(value='door') Leave at Door
                        option(value='meet') Meet Outside        
            #checkout-card 
                #order-summary-card 
                    h3 Order Summary
                    br
                    .totals-info 
                        p Subtotal:
                        label(for="subtotal" id='subtotal-label')
                        p Tax:
                        label(for="tax" id='tax-label')
                        p Total:
                        label(for="total" id='total-label')
                        br
                        br


